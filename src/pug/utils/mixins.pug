

mixin item(className, mark, image, href, name, model, oldPrice, newPrice)
  div(class='ampm-catalog__item ampm-item ' + className)
    span.ampm-item__discount-mark= mark
    a(href= href).ampm-item__image-wrapper
      img(src="./assets/img/evil-discount/" + image alt='Изображение товара' width='302' height='302')
    .ampm-item__description-wrapper
      a(href= href).ampm-item__name= name
      p.ampm-item__model= model
      .ampm-item__price.ampm-price
        span.ampm-price__old= oldPrice + ' руб'
        span.ampm-price__new= newPrice + ' руб'
    a(href= href).ampm-btn.ampm-item__buy-button
      span Подробнее


mixin item-tab(className, mark, image, href, name, model, oldPrice, newPrice)
  div(class='ampm-catalog__item ampm-item ampm-item--tab ' + className)
    span.ampm-item__discount-mark= mark
    a(href= href).ampm-item__image-wrapper.ampm-item__image-wrapper--tab
      img(src="./assets/img/evil-discount/" + image alt='Изображение товара' width='302' height='302')
    .ampm-item__description-wrapper
