mixin picture(srcMobile, src, alt, width, height)
  picture
    source(media='(max-width: 769px)' srcset='./assets/img/evil-discount/' + srcMobile + ' 1x')
    img(src='./assets/img/evil-discount/' + src  alt= alt width= width height= height)

mixin picture-extended(srcMobile, src, srcX2, alt, width, height)
  picture
    source(media='(max-width: 769px)' srcset='./assets/img/evil-discount/' + srcMobile + ' 1x')
    img(src='./assets/img/evil-discount/' + src srcset='./assets/img/evil-discount/' + srcX2 + ' 2x'  alt= alt width= width height= height)

mixin buttons-text-slide(firstName, secondName, thirdName)
  .ampm-text-slide__button-wrapper
    button(type="button").ampm-text-slide__button.ampm-text-slide__button--first.ampm-text-slide__button--active #{firstName}
    button(type="button").ampm-text-slide__button.ampm-text-slide__button--second #{secondName}
    button(type="button").ampm-text-slide__button.ampm-text-slide__button--three #{thirdName}
